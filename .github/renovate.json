{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"automerge": true,
	"git-submodules": {
		"enabled": true
	},
	"packageRules": [
		{
			"groupName": "minver",
			"matchPackageNames": [
				"/minver/"
			]
		},
		{
			"matchPackageNames": ["dotnet-sdk"],
			"versioning": "same-major"
		}
	]
}
